<div class="chart-content">
    <ul class="chart-entry">
        <% if (item.track_position == 1) {%>
        <li class="chart-entry-pos first-place-container">
            <span class="chart-entry-pos-text-one"><%= item.track_position %></span>
        </li>
        <li class="chart-entry-img-container">
            <div>
                <img
                class="chart-entry-img first-place"
                <% if (item.tech_name == null) {%>
                    src="/img/artists/placeholder.jpg"
                <% } else {%>
                    src=<%= "/img/artists/" + item.tech_name + ".jpg" %>
                <% } %>
                />
            </div>
        </li>
        <%} else {%>
        <li class="chart-entry-pos">
            <span class="chart-entry-pos-text"><%= item.track_position %></span>
        </li>
        <li class="chart-entry-img-container">
            <div>
                <img
                class="chart-entry-img"
                src=<%= "/img/artists/" + item.tech_name + ".jpg" %>
                onerror="this.onerror=null; this.src='/img/artists/placeholder.jpg';"
                />
            </div>
        </li>
        <% } %>
        <li class="chart-change">
            <% if (item.ld != null) {%>
                <% if (item.ld > item.track_position) {%>
                    <div class="change-circle"><%- include('signs/up'); %></div>
                <%} else if (item.ld < item.track_position) {%>
                    <div class="change-circle"><%- include('signs/down'); %></div>
                <%} else {%>
                    <div class="change-circle"><%- include('signs/equal'); %></div>
                <% } %>
            <%} else if (item.days == 1) {%>
                <div class="chart-change-icon"><%- include('signs/new'); %></div>
                    <%} else {%>
                <div class="chart-change-icon"><%- include('signs/re'); %></div>
            <% } %>
        </li>
        <li class="chart-entry-rest">
            <ul class="chart-entry-info">
                <li class="chart-entry-song-info">
                    <h3 class="chart-entry-title truncate-text">
                        <% if (item.display_title == null || item.display_title == "") {%>
                            <%- item.title %>
                        <%} else {%>
                            <%- item.display_title %>
                        <%}%>
                    </h3>
                    <span class="chart-entry-artist truncate-text">
                        <% if (item.display_performer == null || item.display_performer == "") {%>
                            <%- item.performer %>
                        <%} else {%>
                            <%- item.display_performer.replaceAll("[", "<a href='/artists/").replaceAll("|", "'>").replaceAll("]", "</a>") %>
                        <%}%>
                    </span>
                </li>
                <div class="chart-entry-stats">
                    <div class="chart-entry-stats-line">
                        <span class="chart-entry-stats-title">LD</span>
                        <li>
                            <% if (item.ld != null) {%>
                                <span class="chart-entry-stats-value"><%= item.ld %></span>
                            <%} else {%>
                                <span class="chart-entry-stats-value">-</span>
                            <% } %>
                        </li>
                    </div>
                    <div class="chart-entry-stats-line">
                        <span class="chart-entry-stats-title">PEAK</span>
                        <li>
                            <span class="chart-entry-stats-value"><%= item.peak %><% if (item.days_at_1 != null) {%>x<%= item.days_at_1 %><%}%></span>
                        </li>
                    </div>
                    <div class="chart-entry-stats-line">
                        <span class="chart-entry-stats-title">DAYS</span>
                        <li>
                            <span class="chart-entry-stats-value"><%= item.days %></span>
                        </li>
                    </div>
                </div>
            </ul>
        </li>
    </ul>
</div>